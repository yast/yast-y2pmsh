#
# Makefile.cvs
#

LIB = $(shell y2tool get-lib)

PREFIX = /usr

configure: all
	./configure --prefix=$(PREFIX) --libdir=$(PREFIX)/$(LIB) --prefix=/usr --sysconfdir=/etc

all:
	rm -rf libtecla
	tar -xvzf package/libtecla-1.5.0.tar.gz
	(cd libtecla && autoreconf --force --install && ./configure)
	y2tool y2autoconf
	y2tool y2automake
	autoreconf --force --install

install: configure
	make -C libtecla
	make
	make install

reconf: all
	./config.status --recheck
	./config.status
